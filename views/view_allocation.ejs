      </div>
    </div>

    <% if (!preview || preview.length === 0) { %>
      <div class="card">
        <p>No allocation data available</p>
      </div>
    <% } else { %>

      <% let currentHall = ""; %>

      <% preview.forEach((p, index) => { %>

        <% if (currentHall !== p.hall_no) { %>

          <% if (currentHall !== "") { %>
              </tbody>
            </table>
          </div>
          <% } %>

          <% currentHall = p.hall_no; %>

          <div class="card">
            <h3>
              Hall: <%= p.hall_no %> |
              Invigilator: <%= p.invigilator %>
            </h3>

            <table class="seat-table">
              <thead>
                <tr>
                  <th>A</th>
                  <th>B</th>
                  <th>C</th>
                  <th>D</th>
                </tr>
              </thead>
              <tbody>
        <% } %>

        <% if (index % 4 === 0) { %>
          <tr>
        <% } %>

          <td>
            <strong><%= p.seat %></strong><br>
            <%= p.regno %><br>
            (<%= p.dept %>)
          </td>

        <% if (index % 4 === 3) { %>
          </tr>
        <% } %>

      <% }) %>

              </tbody>
            </table>
          </div>

    <% } %>

  </div>
