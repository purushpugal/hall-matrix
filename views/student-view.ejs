  <!-- MAIN CONTENT -->
  <div class="main">

    <div class="topbar">
      <h1>Student Seat Information</h1>
    </div>

    <!-- SEARCH CARD -->
    <div class="card">
      <form method="GET" action="/student-view" class="student-search">
        <label>Enter Register Number</label>
        <input
          type="text"
          name="regno"
          placeholder="e.g. 21CS045"
          required
        >
        <button type="submit" class="pdf-btn">Search</button>
      </form>
    </div>

    <!-- RESULT -->
    <% if (searched) { %>

      <% if (!student) { %>
        <div class="card">
          <p style="color:red;">âŒ No allocation found for this Register Number</p>
        </div>
      <% } else { %>

        <div class="card">
          <h3>ğŸ“ Seat Allocation Details</h3>

          <table class="seat-table">
            <tbody>
              <tr>
                <th>Register No</th>
                <td><%= student.regno %></td>
              </tr>
              <tr>
                <th>Department</th>
                <td><%= student.dept %></td>
              </tr>
              <tr>
                <th>Subject</th>
                <td><%= student.subject_code %></td>
              </tr>
              <tr>
                <th>Hall No</th>
                <td><%= student.hall_no %></td>
              </tr>
              <tr>
                <th>Seat No</th>
                <td><strong><%= student.seat %></strong></td>
              </tr>
              <tr>
                <th>Invigilator</th>
                <td><%= student.invigilator %></td>
              </tr>
            </tbody>
          </table>

        </div>

      <% } %>

    <% } %>

  </div>
</div>

</body>
