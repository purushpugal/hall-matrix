<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <title>Student Seat View</title>
  <link rel="stylesheet" href="/style.css">
</head>
<body>

<div class="container">

  <!-- SIDEBAR -->
  <div class="sidebar">
    <h2>Hall Matrix</h2>
    <ul>
      <li><a href="/dashboard">Dashboard</a></li>
      <li><a href="/students">ğŸ“ Students</a></li>
      <li><a href="/halls">ğŸ« Halls</a></li>
      <li><a href="/subjects">ğŸ“˜ Subjects</a></li>
      <li><a href="/invigilators">ğŸ‘¨â€ğŸ« Invigilators</a></li>
      <li><a href="/allocation">ğŸ§® Allocation</a></li>
      <li class="active">
        <a href="/student-view">ğŸ“ Student View</a>
      </li>
      <li><a href="/logout">Logout</a></li>
    </ul>
  </div>

  <!-- MAIN CONTENT -->
  <div class="main">

    <div class="topbar">
      <h1>Student Seat Information</h1>
    </div>

    <!-- SEARCH CARD -->
    <div class="card">
      <form method="GET" action="/student-view" class="student-search">
        <label>Enter Register Number</label>
        <input
          type="text"
          name="regno"
          placeholder="e.g. 920324210001"
          required
        >
        <button type="submit" class="pdf-btn">Search</button>
      </form>
    </div>

    <!-- ERROR MESSAGE -->
    <% if (error) { %>
      <div class="card">
        <p style="color:red;">âŒ <%= error %></p>
      </div>
    <% } %>

    <!-- RESULT CARD -->
    <% if (result) { %>
      <div class="card">
        <h3>ğŸ“ Seat Allocation Details</h3>

        <table class="seat-table">
          <tbody>
            <tr>
              <th>Register No</th>
              <td><%= result.regno %></td>
            </tr>
            <tr>
              <th>Department</th>
              <td><%= result.dept %></td>
            </tr>
            <tr>
              <th>Subject</th>
              <td><%= result.subject_code %></td>
            </tr>
            <tr>
              <th>Hall No</th>
              <td><%= result.hall_no %></td>
            </tr>
            <tr>
              <th>Seat No</th>
              <td><strong><%= result.seat_label %></strong></td>
            </tr>
            <tr>
              <th>Invigilator</th>
              <td><%= result.invigilator %></td>
            </tr>
          </tbody>
        </table>
      </div>
    <% } %>

  </div>
</div>

</body>
</html>
