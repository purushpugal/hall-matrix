<!DOCTYPE html>
<html>
<head>
  <title>Exam Allocation Preview</title>

  <style>
    body {
      font-family: Arial, sans-serif;
      background: #f5f6fa;
      padding: 20px;
    }

    h2 {
      margin-bottom: 5px;
    }

    .hall-card {
      background: #fff;
      padding: 15px;
      margin-bottom: 30px;
      border-radius: 6px;
      box-shadow: 0 2px 6px rgba(0,0,0,0.1);
    }

    .hall-title {
      font-size: 18px;
      font-weight: bold;
      margin-bottom: 10px;
    }

    table {
      width: 100%;
      border-collapse: collapse;
      table-layout: fixed;
    }

    th, td {
      border: 1px solid #333;
      padding: 10px;
      text-align: center;
      vertical-align: middle;
    }

    th {
      background: #1e293b;
      color: #fff;
    }

    .seat {
      font-weight: bold;
      margin-bottom: 4px;
    }

    .regno {
      font-size: 14px;
    }

    .dept {
      font-size: 12px;
      color: #555;
    }

    .confirm-btn {
      padding: 10px 20px;
      font-size: 16px;
      background: #2563eb;
      color: #fff;
      border: none;
      border-radius: 4px;
      cursor: pointer;
    }
  </style>
</head>

<body>

<h2>Exam Allocation Preview</h2>
<p>
  Date: <%= preview[0].exam_date %> |
  Session: <%= preview[0].session %>
</p>

<%
  /* ===============================
     GROUP BY HALL
  =============================== */
  const halls = {};

  preview.forEach(p => {
    if (!p || !p.hall_no || !p.seat_label) return;
    if (!halls[p.hall_no]) halls[p.hall_no] = [];
    halls[p.hall_no].push(p);
  });

  const cols = ["A", "B", "C", "D"];
%>

<% Object.keys(halls).forEach(hallNo => { 
     const seats = halls[hallNo];

     /* Map seats by seat_label (A1, B1, ...) */
     const seatMap = {};
     seats.forEach(s => seatMap[s.seat_label] = s);

     const maxRow = Math.max(
       ...seats.map(s => parseInt(s.seat_label.slice(1)))
     );
%>

<div class="hall-card">
  <div class="hall-title">
    Hall: <%= hallNo %> |
    Invigilator: <%= seats[0].invigilator || "N/A" %>
  </div>

  <table>
    <tr>
      <th>A</th>
      <th>B</th>
      <th>C</th>
      <th>D</th>
    </tr>

    <% for (let r = 1; r <= maxRow; r++) { %>
      <tr>
        <% cols.forEach(c => { 
             const seatKey = c + r;
             const s = seatMap[seatKey];
        %>
          <td>
            <% if (s) { %>
              <div class="seat"><%= seatKey %></div>
              <div class="regno">
                <%= String(s.regno).replace(/\.0$/, "") %>
              </div>
              <div class="dept">(<%= s.dept %>)</div>
              <div class="dept"><%= s.subject_code %></div>
            <% } else { %>
              &nbsp;
            <% } %>
          </td>
        <% }) %>
      </tr>
    <% } %>
  </table>
</div>

<% }) %>

<form method="POST" action="/allocation/confirm">
  <button class="confirm-btn" type="submit">
    Confirm Allocation
  </button>
</form>

</body>
</html>
