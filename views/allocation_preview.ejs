<!DOCTYPE html>
<html>
<head>
  <title>Exam Allocation Preview</title>
  <style>
    body {
      font-family: Arial, sans-serif;
      background: #f5f6fa;
      padding: 20px;
    }

    h2 {
      margin-bottom: 5px;
    }

    .hall-card {
      background: #fff;
      padding: 15px;
      margin-bottom: 30px;
      border-radius: 6px;
      box-shadow: 0 2px 6px rgba(0,0,0,0.1);
    }

    .hall-title {
      font-size: 18px;
      font-weight: bold;
      margin-bottom: 10px;
    }

    table {
      width: 100%;
      border-collapse: collapse;
      table-layout: fixed;
    }

    th, td {
      border: 1px solid #333;
      padding: 10px;
      text-align: center;
      vertical-align: middle;
    }

    th {
      background: #1e293b;
      color: #fff;
    }

    .seat {
      font-weight: bold;
      margin-bottom: 4px;
    }

    .regno {
      font-size: 14px;
    }

    .dept {
      font-size: 12px;
      color: #555;
    }
  </style>
  <div style="margin-bottom: 20px;">
  <a href="/allocation/pdf" target="_blank">
    <button style="
      padding: 10px 20px;
      background: #16a34a;
      color: white;
      border: none;
      border-radius: 5px;
      cursor: pointer;
      font-size: 15px;
    ">
      â¬‡ Download PDF
    </button>
  </a>
  <a
  href="/allocation/pdf-summary"
  target="_blank"
  style="
    display:inline-block;
    margin-top:12px;
    padding:10px 16px;
    background:#0f172a;
    color:white;
    border-radius:6px;
    text-decoration:none;
    font-weight:600;
  "
>
  ðŸ“„ Download Hall Summary PDF
</a>

</div>

</head>
<body>

<h2>Exam Allocation Preview</h2>
<p>Date: <%= date %> | Session: <%= session %></p>

<%
  // Group preview data by hall
  const halls = {};
  preview.forEach(p => {
    if (!halls[p.hall_no]) halls[p.hall_no] = [];
    halls[p.hall_no].push(p);
  });

  const cols = ["A", "B", "C", "D"];
%>

<% Object.keys(halls).forEach(hallNo => { 
     const seats = halls[hallNo];

     // Map seats by seat label (A1, B1, ...)
     const seatMap = {};
     seats.forEach(s => seatMap[s.seat] = s);

     const maxRow = Math.max(
       ...seats.map(s => parseInt(s.seat.slice(1)))
     );
%>


<div class="hall-card">
  <div class="hall-title">
    Hall: <%= hallNo %> |
    Invigilator: <%= seats[0].invigilator %>
  </div>

  <table>
    <tr>
      <th>A</th>
      <th>B</th>
      <th>C</th>
      <th>D</th>
    </tr>

    <% for (let r = 1; r <= maxRow; r++) { %>
      <tr>
        <% cols.forEach(c => { 
             const seatKey = c + r;
             const s = seatMap[seatKey];
        %>
          <td>
            <% if (s) { %>
              <div class="seat"><%= seatKey %></div>
            <div class="regno"><%= String(s.regno).replace(/\.0$/, '') %></div>

              <div class="dept">(<%= s.dept %>)</div>
            <% } else { %>
              &nbsp;
            <% } %>
          </td>
        <% }) %>
      </tr>
    <% } %>
  </table>
</div>

<% }) %>

</body>
</html>
